{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
        "stopOnEntry": false,
        "args": [
          "--runInBand",
          "--no-cache"
        ],
        "cwd": "${workspaceRoot}",
        "runtimeArgs": ["--nolazy"],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "env": {
          "BABEL_ENV": "test",
          "NODE_ENV": "development"
        },
      }
    ]
  }